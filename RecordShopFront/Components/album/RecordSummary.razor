@using RecordShopFront.models

<div class="card m-3">
    <img src="https://plus.unsplash.com/premium_vector-1716316261593-2524cdb7a7b5?q=80&w=2360&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="@Record.Title" />
    <div class="card-body">
        <h5 class="card-title">
            @Record.Title
        </h5>
        <p class="card-text">
            @Record.Description
        </p>
        <h5 class="card-subtitle">Artists</h5>
        @foreach (JunctionModel junction in Record.Artists)
        {
            <p class="card-text">@junction.Artist.Name</p>
        }
        <h5 class="card-subtitle">Genres</h5>
        @foreach(GenreModel junction in Record.Genres)
        {
            <p class="card-text">@junction.Genre</p>
        }
        <a href=@($"albums/{Record.Id}") class="btn btn-success">View</a>

    </div>
</div>

@code {
    [Parameter]
    public AlbumModel Record { get; set; }

}
